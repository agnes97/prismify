// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider          = "postgresql"
  url               = env("DATABASE_PRISMA_URL") // uses connection pooling
  directUrl         = env("DATABASE_URL_NON_POOLING") // uses a direct connection
  shadowDatabaseUrl = env("DATABASE_SHADOW_URL")
}

// Shopping Mall
enum CompareMethod {
  EQUAL
  INCLUDES
}

model CategoryType {
  name       String        @id
  places     String[]      @default([])
  lowercase  Boolean       @default(false)
  compare    CompareMethod @default(INCLUDES)
  categories Category[]
}

model Category {
  name             String       @id
  emoji            String
  CategoryType     CategoryType @relation(fields: [categoryTypeName], references: [name])
  categoryTypeName String
  keys             String[]     @default([])
  items            Item[]
}

model Item {
  id           BigInt     @id
  title        String
  description  String
  countryCode  String
  priceNumeric Float
  currency     String
  url          String
  brand        String
  thumbnailSrc String
  lastActivity DateTime
  categories   Category[]
  isReserved   Boolean    @default(false)
  isSold       Boolean    @default(false)
}

// Auth
model User {
  id           String    @id @default(uuid())
  email        String    @unique
  password     String
  createdAt    DateTime  @default(now())
  lastLoggedIn DateTime?
  profile      Profile?
}

model Profile {
  id     String  @id
  user   User    @relation(fields: [id], references: [id])
  name   String
  avatar String?

  Rating     Rating[]
  RatingItem RatingItem[]
  RatingVote RatingVote[]
}

// CV
model Access {
  id String @id
}

model AccessLog {
  id         String   @id @default(uuid())
  accessCode String
  createdAt  DateTime @default(now())
}

model CV {
  id   String @id
  data Json
}

// Rating
model Rating {
  id           String       @id
  title        String
  hasFavorites Boolean      @default(true)
  maxRating    Int          @default(5)
  minRating    Int          @default(0)
  Participants Profile[]
  RatingItem   RatingItem[]
}

model RatingItem {
  id           String       @id @default(uuid())
  rating       Rating       @relation(fields: [ratingId], references: [id])
  ratingId     String
  title        String
  data         Json
  FavoriteBy   Profile?     @relation(fields: [favoriteById], references: [id])
  favoriteById String?
  RatingVote   RatingVote[]
}

model RatingVote {
  id            String     @id @default(uuid())
  rating        Int
  RatingItem    RatingItem @relation(fields: [ratingItemId], references: [id])
  ratingItemId  String
  Participant   Profile    @relation(fields: [participantId], references: [id])
  participantId String

  @@unique([ratingItemId, participantId])
}
